<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.photoslide</groupId>
    <artifactId>PhotoSlide</artifactId>
    <version>1.0-SNAPSHOT</version>        
    
    <properties>
        <javafx.version>15.0.1</javafx.version>
        <mainClass>org.photoslide.App</mainClass>
        <moduleName>PhotoSlide</moduleName>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>15</maven.compiler.source>
        <maven.compiler.target>15</maven.compiler.target>
    </properties>
    
    <repositories>
        <repository>
            <id>oss.sonatype.org</id>
            <name>Sonatype Snapshot Repository</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <releases>
                <enabled>false</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>  
        <repository>
            <id>bintray-jerady-maven</id>
            <name>bintray</name>
            <url>https://dl.bintray.com/jerady/maven</url>            
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>      
    </repositories>        
    
    <pluginRepositories>
        <pluginRepository>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>bintray-jerady-maven</id>
            <name>bintray-plugins</name>
            <url>https://dl.bintray.com/jerady/maven</url>
        </pluginRepository>
    </pluginRepositories>
    
    <build>
        <pluginManagement>
            <plugins>                               
                <plugin>
                    <groupId>org.moditect</groupId>
                    <artifactId>moditect-maven-plugin</artifactId>
                    <version>1.0.0.RC1</version>
                </plugin>
                <plugin>
                    <groupId>com.coderplus.maven.plugins</groupId>
                    <artifactId>copy-rename-maven-plugin</artifactId>
                    <version>1.0.1</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>3.1.1</version>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>1.6.0</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.8.1</version>
                </plugin>                               
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <release>${maven.compiler.target}</release>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-libs</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/modules</outputDirectory>
                            <includeScope>runtime</includeScope>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.coderplus.maven.plugins</groupId>
                <artifactId>copy-rename-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-target</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <sourceFile>${project.build.directory}/${project.build.finalName}.jar</sourceFile>
                            <destinationFile>${project.build.directory}/modules/${project.build.finalName}.jar</destinationFile>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.moditect</groupId>
                <artifactId>moditect-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>add-module-info-to-deps</id>
                        <phase>package</phase>
                        <goals>
                            <goal>add-module-info</goal>
                        </goals>
                        <configuration>
                            <overwriteExistingFiles>true</overwriteExistingFiles>
                            <jvmVersion>15</jvmVersion>
                            <modules>                                                                  
                                <module>
                                    <artifact>
                                        <groupId>org.reactfx</groupId>
                                        <artifactId>reactfx</artifactId>
                                        <version>2.0-M5</version>                           
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module org.reactfx {                                                                                                                                                                                                                                                                                                                                                                
                                                                                                                        
                                        requires javafx.controls;    
    
                                        exports org.reactfx;
                                        exports org.reactfx.collection;
                                        exports org.reactfx.inhibeans;
                                        exports org.reactfx.inhibeans.binding;
                                        exports org.reactfx.inhibeans.collection;
                                        exports org.reactfx.inhibeans.property;
                                        exports org.reactfx.inhibeans.value;
                                        exports org.reactfx.util;
                                        exports org.reactfx.value;
                                        }
                                    </moduleInfoSource>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>org.fxmisc.undo</groupId>
                                        <artifactId>undofx</artifactId>
                                        <version>2.1.0</version>                           
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module org.fxmisc.undo {                                                                                                                                                                                                                                                                                                                                                                
                                                                                                                        
                                        requires javafx.controls; 
                                        requires org.reactfx;   
    
                                        exports org.fxmisc.undo;                                        
                                        }
                                    </moduleInfoSource>
                                </module> 
                                <module>
                                    <artifact>
                                        <groupId>com.github.dragon66</groupId>
                                        <artifactId>icafe</artifactId>                            
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module icafe {                                                                                                                                                                                                                                                                                                                                                                
                                                                                                              
                                        requires transitive org.slf4j;
                                        requires jai.imageio.core;
                                        requires java.xml;
                                        requires java.desktop;
    
                                        exports com.icafe4j.date;
                                        exports com.icafe4j.image;
                                        exports com.icafe4j.image.bmp;
                                        exports com.icafe4j.image.color;
                                        exports com.icafe4j.image.compression;
                                        exports com.icafe4j.image.gif;
                                        exports com.icafe4j.image.jpeg;
                                        exports com.icafe4j.image.meta;
                                        exports com.icafe4j.image.options;
                                        exports com.icafe4j.image.png;
                                        exports com.icafe4j.image.quant;
                                        exports com.icafe4j.image.reader;
                                        exports com.icafe4j.image.tiff;
                                        exports com.icafe4j.image.util;
                                        exports com.icafe4j.image.writer;
                                        exports com.icafe4j.io;
                                        exports com.icafe4j.string;
                                        exports com.icafe4j.util;
                                        exports com.icafe4j.util.zip;
                                        }
                                    </moduleInfoSource>
                                </module>                                
                                <module>
                                    <artifact>
                                        <groupId>com.github.jai-imageio</groupId>
                                        <artifactId>jai-imageio-core</artifactId>
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module jai.imageio.core {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
                                        
                                        requires transitive java.desktop;
                                        requires transitive java.xml;                                                                                

                                        provides javax.imageio.spi.ImageInputStreamSpi with
                                        com.github.jaiimageio.impl.stream.ChannelImageInputStreamSpi;
                                        provides javax.imageio.spi.ImageOutputStreamSpi with
                                        com.github.jaiimageio.impl.stream.ChannelImageOutputStreamSpi;
                                        provides javax.imageio.spi.ImageReaderSpi with
                                        com.github.jaiimageio.impl.plugins.wbmp.WBMPImageReaderSpi,
                                        com.github.jaiimageio.impl.plugins.bmp.BMPImageReaderSpi,
                                        com.github.jaiimageio.impl.plugins.pcx.PCXImageReaderSpi,
                                        com.github.jaiimageio.impl.plugins.pnm.PNMImageReaderSpi,
                                        com.github.jaiimageio.impl.plugins.raw.RawImageReaderSpi,
                                        com.github.jaiimageio.impl.plugins.tiff.TIFFImageReaderSpi;
                                        provides javax.imageio.spi.ImageWriterSpi with
                                        com.github.jaiimageio.impl.plugins.wbmp.WBMPImageWriterSpi,
                                        com.github.jaiimageio.impl.plugins.bmp.BMPImageWriterSpi,
                                        com.github.jaiimageio.impl.plugins.gif.GIFImageWriterSpi,
                                        com.github.jaiimageio.impl.plugins.pcx.PCXImageWriterSpi,
                                        com.github.jaiimageio.impl.plugins.pnm.PNMImageWriterSpi,
                                        com.github.jaiimageio.impl.plugins.raw.RawImageWriterSpi,
                                        com.github.jaiimageio.impl.plugins.tiff.TIFFImageWriterSpi;                                                                            
                                        }
                                    </moduleInfoSource>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>com.twelvemonkeys.imageio</groupId>
                                        <artifactId>imageio-core</artifactId>
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module imageio.core {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
                                        
                                        requires common.image;
                                        requires common.io;
                                        requires common.lang;
                                        requires java.datatransfer;

                                        requires transitive java.desktop;
                                        requires transitive java.xml;
                                        
                                        exports com.twelvemonkeys.imageio;
                                        exports com.twelvemonkeys.imageio.color;
                                        exports com.twelvemonkeys.imageio.spi;
                                        exports com.twelvemonkeys.imageio.stream;
                                        exports com.twelvemonkeys.imageio.util;
                                                                                    
                                        }
                                    </moduleInfoSource>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>com.twelvemonkeys.imageio</groupId>
                                        <artifactId>imageio-tiff</artifactId>
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module imageio.tiff {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
                                        
                                        requires common.image;
                                        requires common.io;
                                        requires common.lang;

                                        requires transitive imageio.core;
                                        requires transitive imageio.metadata;
                                        requires transitive java.desktop;
                                        requires transitive java.xml;
                                        
                                        exports com.twelvemonkeys.imageio.plugins.tiff;

                                        provides javax.imageio.spi.ImageReaderSpi with
                                        com.twelvemonkeys.imageio.plugins.tiff.TIFFImageReaderSpi,
                                        com.twelvemonkeys.imageio.plugins.tiff.BigTIFFImageReaderSpi;
                                        provides javax.imageio.spi.ImageWriterSpi with
                                        com.twelvemonkeys.imageio.plugins.tiff.TIFFImageWriterSpi;                                                                                                         
                                        }
                                    </moduleInfoSource>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>com.twelvemonkeys.imageio</groupId>
                                        <artifactId>imageio-psd</artifactId>
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module imageio.psd {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
                                        
                                        requires common.image;
                                        requires common.io;
                                        requires common.lang;
                                        requires imageio.metadata;

                                        requires transitive imageio.core;
                                        requires transitive java.desktop;
                                        requires transitive java.xml;
                                        
                                        exports com.twelvemonkeys.imageio.plugins.psd;

                                        provides javax.imageio.spi.ImageReaderSpi with
                                        com.twelvemonkeys.imageio.plugins.psd.PSDImageReaderSpi;                                                                                                        
                                        }
                                    </moduleInfoSource>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>com.twelvemonkeys.imageio</groupId>
                                        <artifactId>imageio-metadata</artifactId>
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module imageio.metadata {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
                                        
                                        requires common.lang;
                                        requires imageio.core;
                                        requires java.xml;

                                        requires transitive java.desktop;
                                        
                                        exports com.twelvemonkeys.imageio.metadata;
                                        exports com.twelvemonkeys.imageio.metadata.exif;
                                        exports com.twelvemonkeys.imageio.metadata.iptc;
                                        exports com.twelvemonkeys.imageio.metadata.jpeg;
                                        exports com.twelvemonkeys.imageio.metadata.psd;
                                        exports com.twelvemonkeys.imageio.metadata.tiff;
                                        exports com.twelvemonkeys.imageio.metadata.xmp;                                        
                                        }
                                    </moduleInfoSource>
                                </module> 
                                <module>
                                    <artifact>
                                        <groupId>com.twelvemonkeys.common</groupId>
                                        <artifactId>common-lang</artifactId>
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module common.lang {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
                                        
                                        requires transitive java.desktop;
                                        requires transitive java.sql;
                                        
                                        exports com.twelvemonkeys.lang;
                                        exports com.twelvemonkeys.util;
                                        }
                                    </moduleInfoSource>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>com.twelvemonkeys.common</groupId>
                                        <artifactId>common-io</artifactId>
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module common.io {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
                                        
                                        requires transitive common.lang;
                                        requires transitive java.desktop;
                                        requires transitive java.xml;
                                        
                                        exports com.twelvemonkeys.io;
                                        exports com.twelvemonkeys.io.enc;
                                        exports com.twelvemonkeys.io.ole2;
                                        exports com.twelvemonkeys.net;
                                        exports com.twelvemonkeys.xml;
                                        }
                                    </moduleInfoSource>
                                </module>
                                <module>
                                    <artifact>
                                        <groupId>com.twelvemonkeys.common</groupId>
                                        <artifactId>common-image</artifactId>
                                    </artifact>                                    
                                    <moduleInfoSource>
                                        open module common.image {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
                                            exports com.twelvemonkeys.image;
                                        }
                                    </moduleInfoSource>
                                </module>                                                                                                                                 
                            </modules>                                                                             
                            <module>                                                                   
                                <moduleInfo>
                                    <name>${moduleName}</name>
                                    <open>true</open>                                    
                                </moduleInfo>                                  
                            </module>   
                            <jdepsExtraArgs>
                                <arg>--multi-release</arg>
                                <arg>11</arg>
                            </jdepsExtraArgs>                       
                        </configuration>
                    </execution>
                </executions>
            </plugin>                        
        </plugins>
    </build>
    
    <dependencies>
        <dependency>
            <groupId>org.openjfx</groupId>
